@model IEnumerable<HOMESTAY_SH.Database_ADO.Homestay>

@{
    Layout = null;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kết quả tìm kiếm</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Kết quả tìm kiếm Homestay</h2>

        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center">
                Không tìm thấy homestay nào phù hợp với từ khoá tìm kiếm.
            </div>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().TenHomestay)</th>
                        <th>@Html.DisplayNameFor(model => model.First().DiaChi)</th>
                        <th>@Html.DisplayNameFor(model => model.First().GiaThue)</th>
                        <th>@Html.DisplayNameFor(model => model.First().SoLuongKhach)</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.TenHomestay)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                            <td>@item.GiaThue?.ToString("N0") VNĐ</td>
                            <td>@Html.DisplayFor(modelItem => item.SoLuongKhach)</td>
                            <td>
                                @Html.ActionLink("Xem chi tiết", "Detail", new { MaHomestay = item.MaHomestay }, new { @class = "btn btn-info btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
