
@model HOMESTAY_SH.Database_ADO.TaiKhoan

@{
    ViewBag.Title = "Tạo Tài Khoản";
}

<h2>Tạo Tài Khoản</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.MaTaiKhoan)
        @Html.TextBoxFor(model => model.MaTaiKhoan, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MaTaiKhoan)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TenDangNhap)
        @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TenDangNhap)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MatKhau)
        @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MatKhau)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Role)
        @Html.DropDownListFor(model => model.Role, ViewBag.RoleList as List<SelectListItem>, "--Chọn vai trò--", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Role)
    </div>



    <div class="form-group">
        <button type="submit" class="btn btn-primary">Tạo Tài Khoản</button>
    </div>
}

<a href="@Url.Action("AccountList", "Account")">Trở lại danh sách tài khoản</a>
