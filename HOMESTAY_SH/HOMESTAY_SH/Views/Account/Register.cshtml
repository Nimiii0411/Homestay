@model SWEET_HOME.Models.RegisterModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/CSS/global.css" />
    <link rel="stylesheet" href="~/CSS/login-css.css" />
</head>
<body>
    <div class="login-page">
        <div class="overlap-group-wrapper">
            <div class="overlap-group">
                <!-- Left side - Register Form -->
                <div class="login-form">
                    <div class="text-wrapper">REGISTER</div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!-- Username -->
                        @Html.TextBoxFor(model => model.Username, new { @class = "email-wrapper", placeholder = "Username" })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                        <!-- Email -->
                        @Html.TextBoxFor(model => model.Email, new { @class = "input-login-regis", placeholder = "Email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                        <!-- Full Name -->
                        @Html.TextBoxFor(model => model.TenKhachHang, new { @class = "email-wrapper", placeholder = "Full Name" })
                        @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })

                        <!-- CCCD -->
                        @Html.TextBoxFor(model => model.CCCD, new { @class = "email-wrapper", placeholder = "CCCD" })
                        @Html.ValidationMessageFor(model => model.CCCD, "", new { @class = "text-danger" })

                        <!-- Address -->
                        @Html.TextBoxFor(model => model.DiaChi, new { @class = "email-wrapper", placeholder = "Address" })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })

                        <!-- Password -->
                        @Html.PasswordFor(model => model.Password, new { @class = "email-wrapper", placeholder = "Password" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        <!-- Confirm Password -->
                        @Html.PasswordFor(model => model.ConfirmPass, new { @class = "email-wrapper", placeholder = "Confirm Password" })
                        @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })

                        <!-- Submit Button -->
                        <button type="submit" class="btn-login">Register</button>
                    }

                    <div class="register-section">
                        <div class="text-wrapper-4">Already have an account?</div>
                        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "text-wrapper-5" })
                    </div>
                </div>

                <!-- Right side - Image -->
                <div class="image-section">
                    <img class="image-2" src="https://c.animaapp.com/rOKmKJAD/img/image-30.png" alt="Register illustration" />
                </div>
            </div>
        </div>
    </div>

</body>
</html>
