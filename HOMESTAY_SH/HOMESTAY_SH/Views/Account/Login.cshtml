@model SWEET_HOME.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/CSS/global.css" />
    <link rel="stylesheet" href="~/CSS/login-css.css" />
</head>
<body>
    <div class="login-page">
        <div class="overlap-group-wrapper">
            <div class="overlap-group">
                <!-- Left side - Login Form -->
                <div class="login-form">
                    <div class="text-wrapper">WELCOME BACK</div>
                    <p class="p">Choose a way to login</p>

                    <div class="google-login">
                        <img src="https://c.animaapp.com/rOKmKJAD/img/image-28@2x.png" alt="Google" />
                        <span class="google-login-text">Login with your gmail</span>
                    </div>

                    <div class="divider">
                        <div class="divider-line"></div>
                        <span class="divider-text">or</span>
                        <div class="divider-line"></div>
                    </div>

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.TextBoxFor(m => m.Username, new
                        {
                            @class = "input-login-regis",
                            placeholder = "Username"
                        })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

                        @Html.PasswordFor(m => m.Password, new
                        {
                            @class = "email-wrapper",
                            placeholder = "Password"
                        })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        <button type="submit" class="btn-login">Login</button>
                    }

                    <div class="register-section">
                        <div class="text-wrapper-4">Don't have an account?</div>
                        @Html.ActionLink("Register", "Register", "Account", null, new { @class = "text-wrapper-5" })
                    </div>
                </div>

                <!-- Right side - Image -->
                <div class="image-section">
                    <img class="image-2" src="https://c.animaapp.com/rOKmKJAD/img/image-30.png" alt="Login illustration" />
                </div>
            </div>
        </div>
    </div>

</body>
</html>